{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["ESNext", "DOM"],
    "types": ["bun"],
    "outDir": "dist",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "removeComments": false,
    "paths": {
      "@gestell/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*"
  ],
  "exclude": [
    "eslint.config.mjs",
    "node_modules",
    "dist"
  ]
}
