{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "types": ["bun"],
    "outDir": "dist",
    "baseUrl": "src",
    "target": "ES6",
    "moduleDetection": "auto",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false
  },
  "include": [
    "./eslint.config.mjs",
    "src/**/*.ts",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
